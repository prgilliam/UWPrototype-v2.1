<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - United Way </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
  
  
</head>
<body>
    
    <div class="navbar navbar-inverse navbar-fixed-top">
       
        <div class="container">
            <img src="~/United way.png" style=" padding: 2px 2px; float:right;width:100px; height:65px;">
            <img src="~/ua-square-logo.png" style=" padding: 2px 2px;float: left;width:65px; height:65px;">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @Html.ActionLink("UA United Way Campaign ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"> 

                    <li> @Html.ActionLink("Employee", "Employee", "Home")</li>
                    <li> @Html.ActionLink("Agency", "Agency", "Home")</li>
                    <li> @Html.ActionLink("Contribution", "Contribution", "Home")</li>
                    <li> @Html.ActionLink("Department", "Department", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - UA United Way Campaign Prototype</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
